<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <title>Ticket de Corte</title>
    <style>
        body {
            font-family: monospace, monospace;
            width: 300px;
            margin: auto;
        }

        h1,
        h2 {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 15px;
        }

        th,
        td {
            border-bottom: 1px dashed #000;
            padding: 5px;
            text-align: left;
        }

        .total {
            font-weight: bold;
            border-top: 1px solid #000;
        }

        button {
            display: block;
            margin: 20px auto;
        }
    </style>
</head>

<body>
    <h1>Ticket de Corte</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Ganancia</th>
            </tr>
        </thead>
        <tbody>
            <% cortes.forEach(corte=> { %>
                <tr>
                    <td>
                        <%= corte.id %>
                    </td>
                    <td>
                        <%= new Date(corte.fecha).toLocaleString() %>
                    </td>
                    <td>$<%= Number(corte.ganancia).toFixed(2) %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
        <tfoot>
            <tr class="total">
                <td colspan="2">Total Ganado</td>
                <td>$<%= Number(totalGanancia).toFixed(2) %>
                </td>
            </tr>
        </tfoot>
    </table>

    <button onclick="window.print()">Imprimir Ticket</button>
    <a href="/corte" style="text-align:center; display:block;">Volver al Corte</a>

    <audio autoplay loop>
        <source src="/audio/musica_fondo.mp3" type="audio/mpeg">
        Tu navegador no soporta audio HTML5.
    </audio>

</body>

</html>